$ ->
  for text_area_id in ['topic-testing-content', 'topic-testing-requirements', 'topic-testing-grading-rules']
    do (text_area_id) ->
      if $("##{text_area_id}").size() > 0
        reviewEditor = new wysihtml5.Editor text_area_id,
          toolbar: "#{text_area_id}-editor-toolbar",
          parserRules: wysihtml5ParserRules,
          stylesheets: ['<%= asset_path 'wysihtml5_editor.css'%>'],
          useLineBreaks: false,
          autoLink: true
