<div class='well'>
<%= form_for [:admin, @topic, @announcement], :html => {:class => 'form-horizontal', :id => 'edit-announcement'} do |f| %>
  <fieldset>
    <legend><%= @announcement.new_record? ? '发布' : '编辑' %>通知</legend>
    <div class='form-group'>
      <%= f.label :topic_id, '所属专题', :class => 'col-lg-2 control-label' %>
      <div class='col-lg-10'>
        <%= f.select :topic_id, Topic.all.map{|topic| [topic.name, topic.id] } %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :title, '标题', :class => 'col-lg-2 control-label' %>
      <div class='col-lg-10'>
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-lg-10 col-lg-offset-2'>
      <%= f.cktext_area :content, :ckeditor => {:height => 400} %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-lg-10 col-lg-offset-2'>
        <%= f.submit '发布', :class => 'btn btn-primary' %>
        <%= link_to '返回', :back, :class => 'btn btn-default' %>
      </div>
    </div>
  </fieldset>
<% end %>
</div>
