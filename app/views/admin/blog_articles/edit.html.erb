<div class='well'>
  <%= form_for [:admin, @blog_article], :html => {:class => 'form-horizontal', :id => 'edit-blog-article'} do |f| %>
    <fieldset>
      <legend>文章审核</legend>
      <div class='form-group'>
        <div class='col-lg-12'>
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-lg-12'>
        <%= f.text_area :content %>
        </div>
      </div>
      <div>
        <%= f.submit '通过', :class => 'btn btn-primary' %>
        <%= f.submit '退回', :class => 'btn btn-primary' %>
        <%= link_to '返回列表', admin_blog_articles_path, :class => 'btn btn-default' %>
      </div>
    </fieldset>
  <% end %>
</div>
