<div class='page-header clearfix'>
  <h1>案例分析</h1>
  <ul>
    <li><%= link_to '新增案例', new_case_analysis_path, :class => 'btn btn-default' %></li>
  </ul>
</div>
<%= search_form_for @search do |f| %>
  <div class='col-lg-3'>
    <%= f.label :title_cont, '标题' %>
    <%= f.text_field :title_cont %>
  </div>
  <div class='col-lg-3'>
    <%= f.label :content_cont, '内容' %>
    <%= f.text_field :content_cont %>
  </div>
  <div class='col-lg-3'>
    <%= f.label :topic_id_eq, '所属专题' %>
    <%= f.select :topic_id_eq, options_from_collection_for_select(Topic.all, :id, :name, @search.topic_id_eq), :include_blank => '全部' %>
  </div>
  <div class='col-lg-2'>
    <%= f.label :created_by_id_eq, '添加人' %>
    <%= f.select :created_by_id_eq, options_from_collection_for_select(Administrator.all, :id, :username, @search.created_by_id_eq), :include_blank => '全部' %>
  </div>
  <div class='col-lg-1'>
    <button type='submit'>搜索</button>
  </div>
<% end %>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>标题</th>
      <th>内容</th>
      <th>添加人</th>
      <th>创建时间</th>
      <th>最后修改时间</th>
      <th >操作</th>
    </tr>
  </thead>
  <% @case_analyses.each do |case_analysis| %>
    <tr>
      <td><%= link_to case_analysis.title, case_analysis %></td>
      <td><%= truncate strip_tags(case_analysis.content), :length => 45 %></td>
      <td><%= case_analysis.created_by.username %></td>
      <td><%= l case_analysis.created_at, :format => :short %></td>
      <td><%= l case_analysis.updated_at, :format => :short %></td>
      <td><%= link_to '删除' %></td>
    </tr>
  <% end%>
</table>
<%= paginate @case_analyses %>
