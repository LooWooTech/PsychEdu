<div class='well'>
  <%= form_for [:admin, @topic, @chapter], :html => {:id => 'edit-chapter', :class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend><%= @chapter.new_record? ? '添加' : '修改' %>章节</legend>
      <div class='form-group'>
        <%= f.label :name, '*章节名称', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-lg-10 col-lg-offset-2'>
          <%= f.submit '保存', :class => 'btn btn-primary' %>
          <%= link_to '返回', :back, :class => 'btn btn-default' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
