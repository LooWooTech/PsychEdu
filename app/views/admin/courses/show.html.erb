<div id='info'>
  <h1>
    <%= link_to @course.subject_name, @course.subject %>：
    <%= @course.name %>
  </h1>
  <div>
    <label>简介：<%= @course.introduction %></label>
  </div>
  <%= link_to '修改', edit_course_path(@course) %>
</div>

<div id='table'>
  <%= link_to '添加单元', new_course_unit_path(@course) %>
  <table>
    <tr>
      <th>课程名称</th>
      <th>操作</th>
    </tr>
    <% @course.units.each do |unit| %>
      <tr>
        <td><%= link_to unit.name, unit %></td>
        <td>
          <%= link_to '修改', edit_unit_path(unit)%>
          <%= link_to '删除', unit, :method => :delete, :data => {:confirm => "确实要删除“#{unit.name}”吗？"}%>
        </td>
      </tr>
    <% end %>
  </table>
</div>
