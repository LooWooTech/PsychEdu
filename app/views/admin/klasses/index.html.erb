<div class='page-header clearfix'>
  <h1>班级</h1>
  <ul>
    <li><%= link_to '新增班级', new_admin_klass_path, :class => 'btn btn-default' %></li>
  </ul>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>名称</th>
      <th>创建时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <% @klasses.each do |klass| %>
    <tr>
      <td><%= klass.name %></td>
      <td><%= l klass.created_at, :format => :short %></td>
      <td>
        <%= link_to '修改', edit_admin_klass_path(klass) if policy(klass).edit? %>
        <%= link_to '删除', [:admin, klass], :method => :delete, :data => {:confirm => "确实要删除#{klass.name}吗？"} if policy(klass).destroy? %>
      </td>
    </tr>
  <% end%>
</table>
