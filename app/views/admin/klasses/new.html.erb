<div class='well'>
  <%= form_for [:admin, @klass], :html => {:class => 'form-horizontal', :id => 'edit-klass'} do |f| %>
    <fieldset>
      <legend><%= @klass.new_record? ? '新增班级' : '修改班级'%></legend>
      <div class='form-group'>
        <%= f.label :name, '*名称', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-lg-10 col-lg-offset-2'>
          <%= f.submit '保存', :class => 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
