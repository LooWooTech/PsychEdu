<% @body_id = 'students-index' %>
<div class='page-header clearfix'>
  <h1>学员列表</h1>
  <ul>
    <li><%= link_to '新增学员', new_student_path, :class => 'btn btn-default' %></li>
  </ul>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>登录名</th>
      <th>姓名</th>
      <th>性别</th>
      <th>单位编码</th>
    </tr>
  </thead>
  <% @students.each do |student| %>
    <tr>
      <td><%= link_to student.username, student %></td>
      <td><%= student.name %></td>
      <td><%= show_gender student %></td>
      <td><%= student.unit_code %></td>
    </tr>
  <% end%>
</table>
<%= paginate @students %>
