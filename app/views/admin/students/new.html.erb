<div class='well'>
  <%= form_for @student, :html => {:id => 'edit-student', :class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend><%= @student.new_record? ? '添加学员' : '修改信息'%></legend>
      <%= f.fields_for :account do |account| %>
      <div class='form-group'>
        <%= account.label :username, '*用户名', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.text_field :username, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= account.label :password, '*密码', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= account.label :password_confirmation, '*确认密码', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
      <% end %>
      <div class='form-group'>
        <%= f.label :name, '*姓名', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :unit_code, '*单位编码', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :unit_code, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :gender, '性别', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.select :gender, Student::GENDER, {}, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :note, '备注', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_area :note, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-lg-10 col-lg-offset-2'>
          <%= f.submit '保存', :class => 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
