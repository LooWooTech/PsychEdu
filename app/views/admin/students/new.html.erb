<div class='well'>
  <%= form_for @student, :html => {:class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend><%= @student.new_record? ? '添加学员' : '修改信息'%></legend>
      <%= f.fields_for :account do |account| %>
      <div class='form-group'>
        <%= account.label :username, '*用户名', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.text_field :username, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= account.label :password, "#{'*' if @student.new_record?}密码", :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= account.label :password_confirmation, "#{'*' if @student.new_record?}确认密码", :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.password_field :password_confirmation, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= account.label :cipher, '密码提示问题', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.text_field :cipher, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= account.label :cipher_answer, '密码提示答案', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= account.text_field :cipher_answer, :class => 'form-control' %>
        </div>
      </div>
      <% end %>
      <div class='form-group'>
        <%= f.label :name, '*姓名', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :unit_code, '*单位编码', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :unit_code, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :unit_name, '单位名称', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :unit_name, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :gender, '性别', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.select :gender, Student::GENDER, {}, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :mobile, '手机', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :mobile, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :telephone, '固定电话', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :telephone, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :email, '电子邮箱', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.email_field :email, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :qq, 'QQ', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :qq, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :identification, '证件号码', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :identification, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :birthday, '生日', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.date_field :birthday, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :province, '所在省', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.select :province, Student::PROVINCES, :include_blank => '请选择', :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :address, '地址', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :address, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :zip_code, '邮编', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :zip_code, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :education, '学历', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :education, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :special_field, '所学专业', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :special_field, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :level, '已获心理咨询师级别', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :level, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :certificate_number, '证书编号', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :certificate_number, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :certify_date, '获得日期', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.date_field :certify_date, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :training_experience, '培训经历', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_area :training_experience, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :psychology_job, '所从事心理服务相关工作', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_area :psychology_job, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :note, '备注', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_area :note, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-lg-10 col-lg-offset-2'>
          <%= f.submit '保存', :class => 'btn btn-primary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
