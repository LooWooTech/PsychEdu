<div class='page-header clearfix'>
  <h1>答卷分配情况</h1>
  <ul>
    <li><%= link_to '分配答卷', admin_experts_path, :class => 'btn btn-default' %></li>
  </ul>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>学员用户名</th>
      <th>学员姓名</th>
      <th>专题名</th>
      <th>题目</th>
      <th>分配给</th>
      <th>操作</th>
    </tr>
  </thead>
  <% @topic_exams.each do |topic_exam| %>
    <tr>
      <td><%= topic_exam.student_username %></td>
      <td><%= topic_exam.student_name %></td>
      <td><%= topic_exam.name %></td>
      <td><%= topic_exam.title %></td>
      <td><%= topic_exam.reviewer_username %></td>
      <td><%= link_to '撤消分配', admin_topic_exam_assignment_path(topic_exam), :method => :delete, :data => {:confirm => '确实要撤消吗？'} if topic_exam.unreviewed? %></td>
    </tr>
  <% end%>
</table>
