<div class='page-header clearfix'>
  <h1>学员列表</h1>
  <ul>
    <li><%= link_to '新增学员', new_student_path, :class => 'btn btn-default' %></li>
  </ul>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>学员姓名</th>
      <th>单位编码</th>
      <th>专题名</th>
      <th>操作</th>
    </tr>
  </thead>
  <% @topic_exams.each do |exam| %>
    <tr>
      <td><%= link_to exam.student_name, exam %></td>
      <td><%= exam.student_unit_code %></td>
      <td><%= exam.name %></td>
      <td><%= link_to exam.reviewed? ? '查看' : '审核', exam %></td>
    </tr>
  <% end%>
</table>
<%= paginate @topic_exams %>
