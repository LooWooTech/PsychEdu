<div class='well'>
  <div class='page-header clearfix'>
    <h1>专题考核信息</h1>
  </div>
  <table class='table table-hover table-condensed table-detail'>
    <tr>
      <th>所属专题</th>
      <td><%= link_to @topic_testing.topic_name, @topic_testing.topic %></td>
    </tr>
    <tr>
      <th>题目</th>
      <td><%= @topic_testing.title %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= sanitize @topic_testing.content %></td>
    </tr>
    <tr>
      <th>要求</th>
      <td><%= sanitize @topic_testing.requirements %></td>
    </tr>
    <tr>
      <th>评分</th>
      <td><%= sanitize @topic_testing.grading_rules %></td>
    </tr>
  </table>
  <%= link_to '修改信息', edit_admin_topic_testing_path(@topic_testing), :class => 'btn btn-default' %>
</div>
