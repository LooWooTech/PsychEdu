<div class='page-header clearfix'>
  <h1>专题管理</h1>
  <ul>
    <% if policy(:topic).create? %>
      <li><%= link_to '添加专题', new_admin_topic_path, :class => 'btn btn-default' %></li>
    <% end %>
  </ul>
</div>
<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th class='col-lg-7'>专题名称</th>
      <th class='col-lg-1'>操作</th>
    </tr>
  </thead>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.name, [:admin, topic] %></td>
      <td>
        <%= link_to '修改', edit_admin_topic_path(topic) if policy(topic).edit? %>
        <%= link_to '删除', [:admin, topic], :method => :delete, :data => {:confirm => "确实要删除“#{topic.name}”吗？"} if policy(topic).destroy? %>
      </td>
    </tr>
  <% end %>
</table>
