<div class='well'>
  <%= form_for [:admin, @topic], :html => {:id => 'edit-topic', :class => 'form-horizontal'} do |f| %>
    <fieldset>
      <legend><%= @topic.new_record? ? '添加' : '修改' %>专题</legend>
      <div class='form-group'>
        <%= f.label :name, '*名称', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :guide_video_url, '专题导学', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :guide_video_url, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :review_video_url, '专题小结', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_field :review_video_url, :class => 'form-control' %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :introduction, '简介', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.text_area :introduction, :class => 'form-control', :rows => 5 %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :supervision, '督导', :class => 'col-lg-2 control-label' %>
        <div class='col-lg-10'>
          <%= f.cktext_area :supervision, :class => 'form-control', :ckeditor => {:height => 400} %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :cover, '封面', :class => 'col-lg-2 control-label'%>
        <div class='col-lg-10'>
          <%= image_tag @topic.cover.url if @topic.cover.url.present? %>
          <%= f.file_field :cover %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-lg-10 col-lg-offset-2'>
          <%= f.submit '保存', :class => 'btn btn-primary' %>
          <%= link_to '返回', :back, :class => 'btn btn-default' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>
