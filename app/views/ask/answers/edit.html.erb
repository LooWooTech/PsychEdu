<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">编辑答案</h4>
</div>

<%= bootstrap_form_for [:ask, @answer], :remote => true, :data => {:event => 'answer.publish', :'event-id' => @answer.id} do |f| %>

<div class="modal-body">
  <%= f.text_area :content, :data => {:event => 'editor'}, label: '问题说明', rows: 8, placeholder: '描述一下您的答案' %>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
  <%= f.submit '确定修改', class: 'btn btn-primary' %>
</div>

<% end %>
