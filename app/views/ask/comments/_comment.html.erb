<div class="media">
	<a class="pull-left" href="#">
		<img class="media-object img-rounded" src="/assets/avatar/2.jpg" width="32" height="32">
	</a>
	<div class="media-body">
		<p><%= comment.commenter_name %></p>
		<%= comment.content %>

		<div class='addition'>
		  <span><%= l comment.created_at %></span>
		  <%= link_to '删除', comment, :method => :delete, :remote => true, :class => :delete, :data => {:confirm => '确实要删除这个评论吗？'} if can?(:destroy, comment) %>
		  <%= link_to '举报', new_comment_complaint_path(comment), :remote => true, :class => :complain %>
		</div>
	</div>
</div>