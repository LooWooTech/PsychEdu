<div class="media-comments">
	<div class="media-items">
		<%= render :collection => commentable.comments, :partial => 'ask/comments/comment' %>
	</div>
	<%= bootstrap_form_for [commentable, Comment.new], :remote => true, :html => {:class => 'new-comment'} do |f| %>
	  <%= f.text_area :content %>
	  <%= f.submit '评论' %>
	<% end %>
</div>