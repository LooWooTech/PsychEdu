<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">举报</h4>
</div>

<%= bootstrap_form_for [@complainable, @complaint], :remote => true, :data => {:event => 'complaint.publish'} do |f| %>

<div class="modal-body">
  <%= f.text_area :content, label: '举报理由', placeholder: '描述一下您的举报理由', rows: 5 %>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
  <%= f.submit '提交举报', class: 'btn btn-primary' %>
</div>

<% end %>