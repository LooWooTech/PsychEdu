<div class="media">
  <a class="pull-right" href="#">
    <img class="media-object img-circle" src="<%= image_path 'avatar/2.jpg' %>" width="48" height="48">
  </a>
  <!-- <div class="media-status pull-left">
    <p><strong>2</strong></p>
    <p><span class="glyphicon glyphicon-thumbs-up"></span></p>
  </div> -->

  <div class="media-post-vote pull-left">
    <a href="#" class="btn btn-default btn-sm btn-block">
      <strong>0</strong><hr>
      <span class="glyphicon glyphicon-thumbs-up"></span> 赞
    </a>
    <a href="#" class="btn btn-default btn-sm btn-block">
      <span class="glyphicon glyphicon-thumbs-down"></span> 踩
    </a>
  </div>

  <div class="media-body">
    <div class="author">
      <a href="#"><%= answer.answerer.name %></a>, 特级英语教师
    </div>
    <div class="contents">
      <%= answer.content %>
    </div>
    <div class="actions">
      <span>一天前</span> /
      <%= link_to '修改', edit_answer_path(answer), :class => 'edit', :remote => true if can?(:edit, answer) %>
      <%= link_to '删除', answer, :method => :delete, :class => 'delete', :data => {:confirm => '确实要删除这个回答吗？'} if can?(:destroy, answer) %>
      <%= link_to "评论(#{answer.comments.count})", answer_comments_path(answer), :remote => true, :class => 'comments' %>
      <%= link_to "举报", new_answer_complaint_path(answer), :class => 'J_complaintsBtn' %>
    </div>
  </div>
</div>