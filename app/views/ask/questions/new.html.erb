<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title">新建提问</h4>
</div>

<%= bootstrap_form_for [@forum, @question], :html => {:id => 'question-form'} do |f| %>
  <div class="modal-body">
    <%= f.text_field :title, label: '标题', placeholder: '写下您问题的标题' %>
    <%= f.text_area :content, :data => {:event => 'editor'}, label: '问题说明', rows: 8, placeholder: '描述一下您的问题' %>
  </div>
  
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
    <%= f.submit '发布提问', class: 'btn btn-primary' %>
  </div>
<% end %>
