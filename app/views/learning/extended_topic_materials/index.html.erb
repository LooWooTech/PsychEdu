<% content_for(:title){ "资料扩展" } %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><%= link_to '首页', learning_root_path %></li>
        <li class="active">资料扩展</li>
      </ol>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading"><%= current_topic_learning.name %> 资料扩展</div>
        <ul class='list-group'>
          <% @materials.each do |material| %>
            <li class='list-group-item'><%= link_to material.title, [:learning, material] %></li>
          <% end %>
        </ul>
        <%= paginate @materials %>
      </div>
    </div>
  </div>
</div>
