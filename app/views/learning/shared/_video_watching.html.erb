<% content_for(:title){ title } %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><%= link_to '首页', learning_root_path %></li>
        <li class="active"><%= title %></li>
      </ol>
    </div>
  </div>
</div>

<div class="container">
  <div class="well">
    <video id="video"></video>
  </div>
</div>

<% content_for :head do %>
<script type='text/javascript'>
  var flashvers = {};
  flashvers.mp4_url = "<%= video_url %>";
  flashvers.dianping = "false";
  flashvers.save_dx = 10;
  flashvers.over_per = 1.5;
  flashvers.flash_xml = '';
  
  var params = {};
  params.menu="false";
  params.allowFullScreen="true";
  params.allowScriptAccess="sameDomain";
  params.wmode="opaque";
  
  swfobject.embedSWF("/flashplayer/player.swf", "video", "100%", "480px", "10.3.0", "/flashplayer/expressInstall.swf",flashvers,params);
</script>
<% end %>
