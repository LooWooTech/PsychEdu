<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : '建德教育' %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body id='sign-in'>
    <h1>建德教育</h1>
    <div class='background'>
      <%= form_tag session_path do %>
        <% if flash[:notice] %>
          <div class='notice'><%= flash[:notice] %></div>
        <% end %>
        <div>
          <%= text_field_tag :username, params[:username], :placeholder => '登录名' %>
        </div>
        <div>
          <%= password_field_tag :password, params[:password], :placeholder => '密码' %>
        </div>
        <div>
          <%= submit_tag '登        录' %>
        </div>
      <% end %>
    </div>
  </body>
</html>
